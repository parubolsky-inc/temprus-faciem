body {
  margin: 0;
}

/* Disable ugly boxes around images in IE10 */
a img{
  border: 0px;
}

::-moz-selection {
  background-color: #6ab344;
  color: #fff;
}

::selection {
  background-color: #6ab344;
  color: #fff;
}

.<%= page.prefix %>-search-box .mdl-textfield__input {
  color: rgba(0, 0, 0, 0.87);
}

.<%= page.prefix %>-header .mdl-menu__container {
  z-index: 50;
  margin: 0 !important;
}


.mdl-textfield--expandable {
  width: auto;
}

.<%= page.prefix %>-fab {
  position: absolute;
  right: 20%;
  bottom: -26px;
  z-index: 3;
  background: #64ffda !important;
  color: black !important;
}

.<%= page.prefix %>-mobile-title {
  display: none !important;
}


.<%= page.prefix %>-logo-image {
  height: 28px;
  width: 140px;
}


.<%= page.prefix %>-header {
  overflow: visible;
  background-color: white;
}

  .<%= page.prefix %>-header .material-icons {
    color: #767777 !important;
  }

  .<%= page.prefix %>-header .mdl-layout__drawer-button {
    background: transparent;
    color: #767777;
  }

  .<%= page.prefix %>-header .mdl-navigation__link {
    color: #757575;
    font-weight: 700;
    font-size: 14px;
  }

  .<%= page.prefix %>-navigation-container {
    /* Simple hack to make the overflow happen to the left instead... */
    direction: rtl;
    -webkit-order: 1;
        -ms-flex-order: 1;
            order: 1;
    width: 500px;
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),
        width 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .<%= page.prefix %>-navigation {
    /* ... and now make sure the content is actually LTR */
    direction: ltr;
    -webkit-justify-content: flex-end;
        -ms-flex-pack: end;
            justify-content: flex-end;
    width: 800px;
  }

  .<%= page.prefix %>-search-box.is-focused + .<%= page.prefix %>-navigation-container {
    opacity: 0;
    width: 100px;
  }


  .<%= page.prefix %>-navigation .mdl-navigation__link {
    display: inline-block;
    height: 60px;
    line-height: 68px;
    background-color: transparent !important;
    border-bottom: 4px solid transparent;
  }

    .<%= page.prefix %>-navigation .mdl-navigation__link:hover {
      border-bottom: 4px solid #8bc34a;
    }

  .<%= page.prefix %>-search-box {
    -webkit-order: 2;
        -ms-flex-order: 2;
            order: 2;
    margin-left: 16px;
    margin-right: 16px;
  }

  .<%= page.prefix %>-more-button {
    -webkit-order: 3;
        -ms-flex-order: 3;
            order: 3;
  }


.<%= page.prefix %>-drawer {
  border-right: none;
}

  .<%= page.prefix %>-drawer-separator {
    height: 1px;
    background-color: #dcdcdc;
    margin: 8px 0;
  }

  .<%= page.prefix %>-drawer .mdl-navigation__link.mdl-navigation__link {
    font-size: 14px;
    color: #757575;
  }

  .<%= page.prefix %>-drawer span.mdl-navigation__link.mdl-navigation__link {
    color: #8bc34a;
  }

  .<%= page.prefix %>-drawer .mdl-layout-title {
    position: relative;
    background: #6ab344;
    height: 160px;
  }

    .<%= page.prefix %>-drawer .<%= page.prefix %>-logo-image {
      position: absolute;
      bottom: 16px;
    }

.<%= page.prefix %>-be-together-section {
  position: relative;
  height: 800px;
  width: auto;
  background-color: #f3f3f3;
  background: url('/assets/images/slide01.jpg') center 30% no-repeat;
  background-size: cover;
}

.logo-font {
  font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif;
  line-height: 1;
  color: #767777;
  font-weight: 500;
}

.<%= page.prefix %>-slogan {
  font-size: 60px;
  padding-top: 160px;
}

.<%= page.prefix %>-sub-slogan {
  font-size: 21px;
  padding-top: 24px;
}

.<%= page.prefix %>-create-character {
  font-size: 21px;
  padding-top: 400px;
}

  .<%= page.prefix %>-create-character a {
    text-decoration: none;
    color: #767777;
    font-weight: 300;
  }

.<%= page.prefix %>-screen-section {
  position: relative;
  padding-top: 60px;
  padding-bottom: 80px;
}

.<%= page.prefix %>-screens {
  text-align: right;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
}

.<%= page.prefix %>-screen {
  text-align: center;
}

.<%= page.prefix %>-screen .<%= page.prefix %>-link {
  margin-top: 16px;
  display: block;
  z-index: 2;
}

.<%= page.prefix %>-image-link {
  text-decoration: none;
}

.<%= page.prefix %>-wear {
  display: inline-block;
  width: 160px;
  margin-right: 32px;
}

  .<%= page.prefix %>-wear .<%= page.prefix %>-screen-image {
    width: 40%;
    z-index: 1;
  }


.<%= page.prefix %>-phone {
  display: inline-block;
  width: 64px;
  margin-right: 48px;
}

  .<%= page.prefix %>-phone .<%= page.prefix %>-screen-image {
    width: 100%;
    z-index: 1;
  }


.<%= page.prefix %>-tablet {
  display: inline-block;
  width: 110px;
  margin-right: 64px;
}

  .<%= page.prefix %>-tablet .<%= page.prefix %>-screen-image {
    width: 100%;
    z-index: 1;
  }

  .<%= page.prefix %>-tablet .<%= page.prefix %>-link {
    display: block;
    z-index: 2;
  }


.<%= page.prefix %>-tv {
  display: inline-block;
  width: 300px;
  margin-right: 80px;
}

  .<%= page.prefix %>-tv .<%= page.prefix %>-screen-image {
    width: 100%;
    z-index: 1;
  }


.<%= page.prefix %>-auto {
  display: inline-block;
  width: 300px;
  overflow: hidden;
}

  .<%= page.prefix %>-auto .<%= page.prefix %>-screen-image {
    display: block;
    height: 300px;
    z-index: 1;
  }


.<%= page.prefix %>-wear-section {
  position: relative;
  background: url('/assets/images/wear.png') center top no-repeat;
  background-size: cover;
  height: 800px;
}

.<%= page.prefix %>-wear-band {
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  background-color: #37474f;
}

.<%= page.prefix %>-wear-band-text {
  max-width: 800px;
  margin-left: 25%;
  padding: 24px;
  text-align: left;
  color: white;
}

  .<%= page.prefix %>-wear-band-text p {
    padding-top: 8px;
  }

.<%= page.prefix %>-link {
  text-decoration: none;
  color: #8bc34a !important;
}

  .<%= page.prefix %>-link:hover {
    color: #7cb342 !important;
  }

  .<%= page.prefix %>-link .material-icons {
    position: relative;
    top: -1px;
    vertical-align: middle;
  }

.<%= page.prefix %>-alt-link {
  text-decoration: none;
  color: #64ffda !important;
  font-size: 16px;
}

  .<%= page.prefix %>-alt-link:hover {
    color: #00bfa5 !important;
  }

  .<%= page.prefix %>-alt-link .material-icons {
    position: relative;
    top: 6px;
  }

.<%= page.prefix %>-customized-section {
  text-align: center;
}

.<%= page.prefix %>-customized-section-text {
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  padding: 80px 16px 0 16px;
}

  .<%= page.prefix %>-customized-section-text p {
    padding-top: 16px;
  }

.<%= page.prefix %>-customized-section-image {
  background: url('/assets/images/devices.jpg') center top no-repeat;
  background-size: cover;
  height: 400px;
}

.<%= page.prefix %>-more-section {
  padding: 80px 0;
  max-width: 1044px;
  margin-left: auto;
  margin-right: auto;
}

  .<%= page.prefix %>-more-section .<%= page.prefix %>-section-title {
    margin-left: 12px;
    padding-bottom: 24px;
  }

.<%= page.prefix %>-card-container {
}

  .<%= page.prefix %>-card-container .mdl-card__media {
    overflow: hidden;
    background: transparent;
  }

    .<%= page.prefix %>-card-container .mdl-card__media img {
      width: 100%;
    }

  .<%= page.prefix %>-card-container .mdl-card__title {
    background: transparent;
    height: auto;
  }

  .<%= page.prefix %>-card-container .mdl-card__title-text {
    color: black;
    height: auto;
  }

  .<%= page.prefix %>-card-container .mdl-card__supporting-text {
    height: auto;
    color: black;
    padding-bottom: 56px;
  }

  .<%= page.prefix %>-card-container .mdl-card__actions {
    position: absolute;
    bottom: 0;
  }

  .<%= page.prefix %>-card-container .mdl-card__actions a {
    border-top: none;
    font-size: 16px;
  }

.<%= page.prefix %>-footer {
  background-color: #fafafa;
  position: relative;
}

  .<%= page.prefix %>-footer a:hover {
    color: #8bc34a;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--top-section::after {
    border-bottom: none;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--middle-section::after {
    border-bottom: none;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--bottom-section {
    position: relative;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--bottom-section a {
    margin-right: 2em;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--right-section a .material-icons {
    position: relative;
    top: 6px;
  }


.<%= page.prefix %>-link-menu:hover {
  cursor: pointer;
}


/**** Mobile layout ****/
@media (max-width: 900px) {
  .<%= page.prefix %>-navigation-container {
    display: none;
  }

  .<%= page.prefix %>-title {
    display: none !important;
  }

  .<%= page.prefix %>-mobile-title {
    display: block !important;
    position: absolute;
    left: calc(50% - 70px);
    top: 12px;
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* WebViews in iOS 9 break the "~" operator, and WebViews in OS X 10.10 break
     consecutive "+" operators in some cases. Therefore, we need to use both
     here to cover all the bases. */
  .android.<%= page.prefix %>-search-box.is-focused ~ .<%= page.prefix %>-mobile-title,
  .<%= page.prefix %>-search-box.is-focused + .<%= page.prefix %>-navigation-container + .<%= page.prefix %>-mobile-title {
    opacity: 0;
  }

  .<%= page.prefix %>-more-button {
    display: none;
  }

  .<%= page.prefix %>-search-box.is-focused {
    width: calc(100% - 48px);
  }

  .<%= page.prefix %>-search-box .mdl-textfield__expandable-holder {
    width: 100%;
  }

  .<%= page.prefix %>-be-together-section {
    height: 350px;
  }

  .<%= page.prefix %>-slogan {
    font-size: 26px;
    margin: 0 16px;
    padding-top: 24px;
  }

  .<%= page.prefix %>-sub-slogan {
    font-size: 16px;
    margin: 0 16px;
    padding-top: 8px;
  }

  .<%= page.prefix %>-create-character {
    padding-top: 200px;
    font-size: 16px;
  }

  .<%= page.prefix %>-create-character img {
    height: 12px;
  }

  .<%= page.prefix %>-fab {
    display: none;
  }

  .<%= page.prefix %>-wear-band-text {
    margin-left: 0;
    padding: 16px;
  }

  .<%= page.prefix %>-footer .mdl-mega-footer--bottom-section {
    display: none;
  }
}
